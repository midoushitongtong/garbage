<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 填充颜色 -->
    <solid android:color="#ffffff" />

    <!-- 边框颜色 -->
    <stroke
        android:width="1dp"
        android:color="#aaaaaa" />

    <!-- 圆角 -->
    <corners android:radius="2dp" />

    <!-- 四个方向的间距 -->
    <padding
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:left="2dp" />
</shape>